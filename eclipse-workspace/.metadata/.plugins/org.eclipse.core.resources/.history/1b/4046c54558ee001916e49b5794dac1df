
public class BankAccount {
	
	private double saldo;
	private String nome;
	private int ID;
	
	public BankAccount(double saldo, String nome, int ID) {
		this.saldo = saldo;
		this.nome= nome;
		this.ID= ID;
	}

	public double getSaldo() {
		return saldo;		
	}
	
	public String getNome() {
		return nome;
	}
	
	public int getID() {
		return ID;
	}
	
	public void preleva(double amount) {
		saldo -= amount;
	}
	
	public void deposita(double amount) {
		saldo +=amount;
	}
	
	
}

